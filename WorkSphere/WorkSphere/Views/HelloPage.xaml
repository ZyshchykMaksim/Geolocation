<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="WorkSphere.Views.HelloPage">
<ContentPage.Content>
  <Grid  VerticalOptions="Fill" >
    <StackLayout  VerticalOptions="FillAndExpand" Orientation="Vertical" Padding="0,20">
      <Label Text="{Binding Title}"></Label>
      <Entry Text="Hello" VerticalOptions="Fill" />
      <Button Command="{Binding OnClickCommand}" Text="CLICK ME"/>
    </StackLayout>
    <!--<StackLayout IsEnabled="False" BackgroundColor="Blue" Opacity="0.5" VerticalOptions="FillAndExpand" Orientation="Vertical">
    </StackLayout>-->
  </Grid>
</ContentPage.Content>
</ContentPage>